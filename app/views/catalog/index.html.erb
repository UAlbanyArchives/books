<% content_for(:sidebar) do %>
  <% conf = blacklight_config.view_config(document_index_view_type) %>
  <%= render conf.sidebar_component.new(blacklight_config: blacklight_config,
                                        response: @response,
                                        view_config: conf) %>
<% end %>

<% unless has_search_parameters? %>
  <%# if there are no input/search related params, display the "home" partial -%>
  <%= render 'home' %>
  <%= render 'shared/sitelinks_search_box' %>
<% else %>
  <% if params.has_key?("q") %>
    <%= render 'search_results' %>
  <% else %>
    <% if params.has_key?("f") %>
      <% if params["f"].has_key?("collecting_area_ssim") and params["f"].keys.count == 1 %>
        <% if params["f"]["collecting_area_ssim"][0] == "Mathes Childrens Literature" %>
          <%= render 'mathes' %>
        <% elsif params["f"]["collecting_area_ssim"][0] == "Political Pamphlets" %>
          <%= render 'pamphlets' %>
        <% elsif params["f"]["collecting_area_ssim"][0] == "Rare Books" %>
          <%= render 'home' %>
        <% else %>
          <%= render 'search_results' %>
        <% end %>
      <% else %>
        <%= render 'search_results' %>
      <% end %>
    <% else %>
      <%= render 'search_results' %>
    <% end %>
  <% end %>
<% end %>

